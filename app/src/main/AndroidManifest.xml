<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.themeteam.app">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_fingerprint"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ReviewPhotosActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ScanActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.StationListActivity"
            android:label="@string/title_activity_station_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MesimotListActivity"
            android:label="@string/title_activity_mesimot_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.HishtalshelutActivity"
            android:label="@string/title_activity_hishtalshelut"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>